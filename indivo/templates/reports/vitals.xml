{% extends "reports/reports.xml" %}
{% load template_utils %}
{% block summary %}
  <Summary total_document_count="{{trc}}" limit="{{limit}}" offset="{{offset}}" order_by="{{order_by}}" />
{% endblock %}
{% block report %}
{% for vital in vitals %}
<Report>
  <Meta>
    {{ vital.document_id|get_doc_obj }}
  </Meta>
  <Item>
    <VitalSign xmlns="http://indivo.org/vocab/xml/documents#">
      {% if vital.date_measured %}
        <dateMeasured>{{ vital.date_measured|format_iso8601_datetime }}</dateMeasured>
      {% endif %}
      {% if vital.name %}
        <name{% if vital.name_type %} type="{{ vital.name_type }}" value="{{ vital.name_value }}"{% if vital.name_abbrev %} abbrev="{{ vital.name_abbrev }}"{% endif %}{% endif %}>{{ vital.name }}</name>
      {% endif %}
      {% if vital.value %}
        <value>{{ vital.value }}</value>
      {% endif %}
      {% if vital.unit %}
        <unit{% if vital.unit_type %} type="{{ vital.unit_type }}" value="{{ vital.unit_value }}"{% if vital.unit_abbrev %} abbrev="{{ vital.unit_abbrev }}"{% endif %}{% endif %}>{{ vital.unit }}</unit>
      {% endif %}
      {% if vital.site %}
        <site>{{ vital.site }}</site>
      {% endif %}
      {% if vital.position %}
        <position>{{ vital.position }}</position>
      {% endif %}
      {% if vital.comments %}
        <comments>{{ vital.comments }}</comments>
      {% endif %}
    </VitalSign>
  </Item>
</Report>
{% endfor %}
{% endblock %}
